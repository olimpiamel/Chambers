<%= form_with model: @property, local: true do |form| %>

<% if @property.image? %>
    <%= image_tag @property.image.thumb.url %>
    <div>
      <%= label_tag :remove_image do %>
        Remove image
        <%= form.check_box :remove_image %>
      <% end %>
    </div>
<% end %>

  <% if @property.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@property.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @property.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :address %><br>
    <%= form.text_field :address %>
  </p>

  <p>
    <%= form.label :price %><br>
    <%= form.text_field :price %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>

  <p>
    <%= form.label :image %><br>
    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
  </p>

  <p>
    <%= form.submit %>
  </p>

 <%= render 'shared/errors', object: @property %>

<% end %>
