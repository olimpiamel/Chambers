<p>
  <strong>Title:</strong>
  <%= @property.title %>
</p>

<p>
  <strong>Address:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>Price:</strong>
  <%= @property.price %>
</p>

<p>
  <strong>Description:</strong>
  <%= @property.description %>
</p>

<p>
  <strong>Images:</strong>

</p>

<% if @property.images? %>
  <ul>
    <% @property.images.each do |image| %>
      <li><%= link_to(image_tag(image.big_thumb.url, alt: 'Image'), image.url, target: '_blank') %></li>
    <% end %>
  </ul>
<% end %>

<h2>Comments</h2>
<%= render @property.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<%= link_to 'Edit', edit_property_path(@property) %> |
<%= link_to 'Back', properties_path %>
